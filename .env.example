# Site Configuration
NEXT_PUBLIC_SITE_URL=https://dreamstudio.dev

# Analytics (Vercel Analytics - auto-configured on Vercel)
# No environment variables needed for Vercel Analytics
# It's automatically enabled when deployed to Vercel

# Contact Form API
NEXT_PUBLIC_CONTACT_API_URL=
CONTACT_API_SECRET=

# Email Configuration (if using direct email)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# CRM Integration (optional)
CRM_API_KEY=
CRM_API_URL=

# Error Tracking (Sentry, LogRocket, etc.)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Environment
NODE_ENV=production
